@model IEnumerable<Cartools.Models.Plano>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanoTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficina)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanoTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficina.Bairro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlanoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlanoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
