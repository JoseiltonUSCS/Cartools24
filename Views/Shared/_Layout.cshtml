        </header>
        <main class="card border-0 mt-0 bg-light" role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-black bg-black">
        <div class="container">
            &copy; @DateTime.Now.Year - Cartools - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
