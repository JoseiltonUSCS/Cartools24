<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Cartools</title>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" type="text/css" />
    <link rel="stylesheet" href="~/CarrosMac.styles.css" asp-append-version="true" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container-fluid">
        <header>
            <!-- <BarraNav"> -->
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-black bg-black border-bottom box-shadow">
                <div class="md-3 container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" />
                    </a>
                    <div class="md-6 justify-content-lg-around navbar-collapse collapse d-lg-inline-flex flex-lg-row ">

                        @await Component.InvokeAsync("CarrinhoCompraResumo")

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Home" asp-action="Index">
                            <p class="space"></p><h4>Home</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Home" asp-action="SobreNos">
                            <p class="space"></p><h4>Sobre nós</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Plano" asp-action="List">
                            <p class="space"></p><h4>Anunciar</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Contato" asp-action="Index">
                            <p class="space"></p><h4>Contato</h4>
                        </a>

                        <!-- Formulário de login navbar -->
                        @await Html.PartialAsync("_LoginPartial")

                        <!--Link de acesso à página do administrador-->
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }
                        <!--Link de acesso à página do parceiro/lojista/oficina-->
                        @if (User.IsInRole("Parceiro"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Parceiro" asp-controller="Parceiro" asp-action="Index">Parceiro</a>
                        }
                    </div>
                </div>
            </nav>

            <!--Campos de busca no banner - select -->
            <div class="card text-dark" style="padding:0;">
                <div class="card-body" style="padding:0;">
                    <img class="card-img" src="~/images/bannerRascunhoAltura (2).png" />
                    <div class="card-img-overlay">
                        <div class="row">
                            <div class="col-md-4">
                                <h1 class="card-title mx-4">CarTools</h1>
                                <p class="card-text mx-4">
                                    Lorem ipsum dolor sit amet consectetur !<br />
                                    A <strong>Cartools</strong> edipiscing elit donec vel egestas dolor, nec dignissim metus!
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h4>Encontre a loja mais perto de você!</h4>

                                <div class="d-flex flex-column">
                                    <form asp-controller="Servico" asp-action="Search" method="get" name="searchString" value="@ViewData["searchString"]" class="form-inline pull-right" style="margin-top:15px;">
                                        <select class="form-select form-select-sm mb-4" name="searchString" value="@ViewData["searchString"]" aria-label=".form-select-sm example" style="width: 300px; font-size:1em;">
                                            <option selected>Serviços</option>
                                            <option value="Polimento">Polimento</option>
                                            <option value="Cristalização">Cristalização</option>
                                            <option value="Lavagem Simples">Lavagem Simples</option>
                                            <option value="Martelinho de Ouro">Martelinho de Ouro</option>
                                            <option value="Envelopamento">Envelopamento</option>
                                            <option value="Pintura">Pintura</option>
                                            <option value="OxiSanitização">OxiSanitização</option>
                                            <option value="Higienização">Higienização</option>
                                            <option value="Funilaria e Pintura">Funilaria e Pintura</option>
                                        </select>
                                        <button class="btn btn-primary botaoBusca" type="submit">Ok</button>
                                    </form>
                                  
                                        <form asp-controller="Servico" asp-action="List" method="get" name="local" value="@ViewData["local"]" class="form-inline pull-right">
                                        <select class="form-select form-select-sm" name="local" value="@ViewData["local"]" aria-label=".form-select-sm example" style="width: 300px;font-size:1em; ">
                                            <option selected>Cidade</option>
                                            <option value="Santo André">Santo André</option>
                                            <option value="São Bernardo do Campo">São Bernardo do Campo</option>
                                            <option value="São Caetano do Sul">São Caetano do Sul</option>
                                            <option value="São Paulo">São Paulo</option>
                                        </select>
                                        <button class="btn btn-primary botaoBusca" type="submit">Ok</button>
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

