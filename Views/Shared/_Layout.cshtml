<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-black bg-black border-bottom box-shadow">
                <div class="md-3 container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" />
                    </a>

                    <div class="md-6 justify-content-lg-around navbar-collapse collapse d-lg-inline-flex flex-lg-row ">

                        @await Component.InvokeAsync("CarrinhoCompraResumo")

                        <!-- <BarraNav"> -->

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Home" asp-action="SobreNos">
                            <p class="space"></p><h4>Sobre nós</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Plano" asp-action="List">
                            <p class="space"></p><h4>Anunciar</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Home" asp-action="Index">
                            <p class="space"></p><h4>Home</h4>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Contato" asp-action="Index">
                            <p class="space"></p><h4>Contato</h4>
                        </a>

                        <form class="navbar-form navbar-right" asp-controller="Servico" asp-action="Search" method="get">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Procurar serviço" name="searchString" value="@ViewData["searchString"]" />
                            </div>
                        </form>

                        <!--
                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Servico" asp-action="List">
                            <p class="space"></p><h2>Serviços</h2>
                        </a>

                        -->
                        @await Component.InvokeAsync("LocalMenu")



                        <!--Loja mais próxima
                            <a class="nav-link-underline text-light" asp-area="" asp-   controller="Busca" asp-action="Index">Encontre a loja mais próxima</a>
                        -->
                        @await Html.PartialAsync("_LoginPartial")

                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }

                        @if (User.IsInRole("Parceiro"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Parceiro" asp-controller="Parceiro" asp-action="Index">Parceiro</a>
                        }

                    </div>
                </div>
            </nav>
            <!--Código usando select-->
            <div class="card text-dark" style="padding:0;">
                <div class="card-body" style="padding:0;">
                    <img class="card-img" src="~/images/bannerRascunhoAltura (2).png" />
                    <div class="card-img-overlay">
                      <div class="row">
                        <div class="col-md-4">
                          <h1 class="card-title mx-4">CarTools</h1>
                          <p class="card-text mx-4">
                            Lorem ipsum dolor sit amet consectetur !<br />
                            A <strong>Cartools</strong> edipiscing elit donec vel egestas dolor, nec dignissim metus!
                          </p>
                        </div>
                        <div class="col-md-4">
                            <h2>Encontre a loja mais perto de você!</h2>
                          <div class="d-flex flex-column">
                                        <select class="form-select form-select-sm mb-4" aria-label=".form-select-sm example" style="margin-top:15px">
                                            <option selected>Serviços</option>
                                            <option value="12">Polimento</option>
                                            <option value="14">Cristalização</option>
                                            <option value="15">Lavagem Simples</option>
                                            <option value="17">Martelinho de Ouro</option>
                                            <option value="18">Envelopamento</option>
                                            <option value="19">Pintura</option>
                                            <option value="20">OxiSanitização</option>
                                            <option value="21">Higienização</option>
                                            <option value="22">Funilaria e Pintura</option>
                                        </select>
                                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                                            <option selected>Cidade</option>
                                            <option value="1">Santo André</option>
                                            <option value="2">São Bernardo</option>
                                            <option value="3">São Caetano</option>
                                            <option value="4">São Paulo</option>
                                        </select>

                          </div>
                        </div>
                        <div class="col-md-4"></div>
                      </div>
                    </div>
                  </div>
              </div>
