<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Cartools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarrosMac.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-black bg-black border-bottom box-shadow">
                <div  class="md-3 container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png"/>
                    </a>

                    <div class="md-6 justify-content-lg-around navbar-collapse collapse d-lg-inline-flex flex-lg-row ">

                        @await Component.InvokeAsync("CarrinhoCompraResumo")

                        <!-- <BarraNav"> -->
                         
                        <a class="nav-link text-light" asp-area=""
                                asp-controller="Home" asp-action="SobreNos"><p 
                          class="space"></p><h2>Sobre nós</h2>
                        </a>

                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Home"asp-action="SejaParceiro"><p 
                          class="space"></p><h2>Seja Parceiro</h2>
                        </a>

                         <a class="nav-link text-light" asp-area="" 
                                asp-controller="Home" asp-action="Index"><p 
                          class="space"></p><h2>Home</h2>
                          </a>
                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Local" asp-action="List">
                            <p class="space"></p><h2>Local</h2>
                        </a>
                        <form class="navbar-form navbar-right" asp-controller="Servico" asp-action="Search" method="get">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Procurar serviço" name="searchString" value="@ViewData["searchString"]" />
                            </div>
                        </form>
                        <!--
                        <a class="nav-link text-light" asp-area=""
                           asp-controller="Servico" asp-action="List">
                            <p class="space"></p><h2>Serviços</h2>
                        </a>
                        -->

                        @await Component.InvokeAsync("LocalMenu")

                        @await Component.InvokeAsync("ServicoMenu")

                        
                           <!--Loja mais próxima-->
                        <a class="nav-link-underline text-light" asp-area="" asp-controller="Busca" asp-action="Index">Encontre a loja mais próxima</a>


                        @await Html.PartialAsync("_LoginPartial")

                        @if(User.IsInRole("Admin"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }

                        @if(User.IsInRole("Parceiro"))
                        {
                            <a class="nav-link-underline-primary text-light" asp-area="Parceiro" asp-controller="Parceiro" asp-action="Index">Parceiro</a>
                        }

                    </div>
                </div>
            </nav>
        </header>
        <main class="card border-0 mt-0 bg-light" role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-black">
        <div class="container">
            &copy; 2023 - Cartools - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

