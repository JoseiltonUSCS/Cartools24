@model Servico

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h3>@Model.Preco.ToString("c")</h3>
    <a asp-controller="Servico" asp-action="Details" asp-route-servicoId ="@Model.ServicoId">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>
    <p>@Model.Local.Cidade</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-ServicoId="@Model.ServicoId">
                Incluir no Carrinho
            </a>
        </p>
    </div>

</div>