
<!--Busca por cidade/Local  -->
<div class="dropdown">

    <a class="btn btn-secondary dropdown-toggle" role="button"
       id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Busca por região
    </a>

    <ul class="dropdown-menu">
        @foreach (var local in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Servico" asp-action="List" style="color:black" asp-route-local="@local.Cidade">
                    @local.Cidade
                </a>
            </li>
        }
        <li class="dropdown-divider"></li>

        <li>
            <a class="dropdown-item" asp-controller="Servico" asp-action="List" asp-route-local="" style="color:black">
               Todas as Cidades
            </a>
        </li>
    </ul>
</div>


<!--Dropdown Agendamento - DataPicker  -->
<div>
    <div class="dropdown">
        <input class="btn btn-success dropdown-toggle" type="datetime" id="calendario" placeholder="Agendar visita" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />
        <div class="dropdown-menu" aria-labelledby="calendario">
            <!-- Adicione opções do dropdown aqui, se necessário -->
        </div>
    </div>
    @section Scripts {
        <script type="text/javascript">
            $(function () {
                $("#calendario").datepicker();
            });
        </script>
    }
</div>



