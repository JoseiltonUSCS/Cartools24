@model LoginViewModel

<!--Formulário de Registro-->

<div class="row" style="height: 600px; align-content: center;">
    <div class="card  mx-auto align-content-center" style="width: 500px; border: 2px solid black;">
        <table class="table">
            <tr>
                <td class="d-flex justify-content-center" style= "margin-top:100px;">
                     <img src="~/images/registro1.png" alt="Registrar Usuário" width="80" height="80" />
                </td>
                <td>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <hr />
                        <div class="form-group">
                            <label asp-for="SelectedRole">Selecione o seu perfil:</label>
                            <select asp-for="SelectedRole" class="form-control">
                                <option value="Member">Cliente</option>
                                <option value="Parceiro">Parceiro</option>
                            </select>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-6 col-md-6 col-lg-6 d-grid">
                            <input type="submit" class="btn btn-primary" value="Cadastrar" style="margin-top:7px;" />
                        </div>
                            <div class="col-sm-6 col-md-6 col-lg-6 d-grid">
                            <a class="btn btn-outline-primary" href="/" role="button" style="margin-top:7px;">Cancelar</a>
                        </div>
                        </div>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</div>

