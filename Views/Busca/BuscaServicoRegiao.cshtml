@model IEnumerable<Cartools.Models.Categoria>


<h2>Prestadores de servico na sua região</h2>

<nav class="nabbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="CategoriaNome" class="col-lg-6 control-label">Categoria</label>
                    <div class="col-lg-10">
                        <input type="search" name="CategoriaNome" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="CategoriaNome" class="col-lg-6 control-label">Servico</label>
                    <div class="col-lg-10">
                        <input type="search" name="CategoriaNome" class="form-control" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">

   


    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaNome)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaNome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>