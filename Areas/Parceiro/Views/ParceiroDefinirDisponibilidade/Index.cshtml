@model Cartools.Models.Disponibilidade

@{
    ViewData["Title"] = "Definir Disponibilidade";
}

<style>

    .datas-selecionadas {
        display: flex;
        gap: 10px;
        max-width: 300px;
    }

    .data-column {
        width: 50%;
    }

    .data-item {
        position: relative;
        margin-bottom: 5px;
        border-radius: 5px;
        background-color: #f0f0f0;
        padding: 5px 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .data-item span {
            flex: 1;
        }

        .data-item button {
            border: none;
            background: none;
            font-size: 10px;
            cursor: pointer;
            margin-left: 3px;
            margin-top: -12px;
        }

    .modal-body {
        max-height: 300px;
        overflow-y: auto;
    }

    .hora-selecionada {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

        .hora-selecionada input[type="time"] {
            flex: 1;
            margin-right: 5px;
            height: auto;
            padding: 2px 5px;
            font-size: 12px;
        }

    .remover-hora {
        border: none;
        background-color: transparent;
        font-size: 12px;
        cursor: pointer;
    }

    .modal-header .close {
        outline: none;
        border: none;
        background-color: transparent;
    }
</style>

<h1>Definir Disponibilidade</h1>

<div style="display: flex;">
    <div>
        @Html.Partial("_Calendar")
    </div>
    <div style="flex: 1; margin-left: 20vh; margin-top: 5vh;">
        @Html.Partial("_SelectedDates")
    </div>
</div>

@Html.Partial("_ModalHours")
@Html.Partial("_SuccessModal")
@Html.Partial("_ErrorModal")

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet">
    <style>
        /* Estilo personalizado para o calendário */
        #calendario {
            font-family: Arial, sans-serif;
            width: 300px;
            margin: 20px auto;
        }

        /* Estilo para o cabeçalho do calendário */
        .ui-datepicker-header {
            background-color: black;
            color: white;
            font-size: 18px;
            padding: 10px;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        /* Estilo para os dias da semana */
        .ui-datepicker-week-end, .ui-datepicker-week-end a {
            color: #66bb6a; /* Verde */
        }

        /* Estilo para os dias do calendário */
        .ui-datepicker-calendar {
            background-color: white;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        /* Estilo para os dias selecionáveis */
        .ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
            color: black;
        }

        /* Estilo para o dia atual */
        .ui-datepicker-today {
            background-color: #66bb6a; /* Verde */
            color: white;
        }

        /* Estilo para os links de navegação */
        .ui-datepicker-prev span, .ui-datepicker-next span {
            background-color: black;
            color: white;
            padding: 3px;
            border-radius: 3px;
        }
    </style>
    <script src="~/js/definirDisponibilidade.js"></script>
}

