@{
    ViewData["Title"] = "uplodaFiles";
}

<table border="0" width="100%">
    <br />
    <br />
    <tr>
        <td>
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    @if (ViewData["Erro"] != null)
                    {
                        <img src="~/images/falhou.jpg" width="150" height="150" />
                        <h4> @ViewData["Erro"]</h4>
                    }
                </div>

                <div class="container">
                    @if (ViewData["Resultado"] != null)
                    {
                        <img src="~/images/tudoCerto.jpg" width="150" height="150" />
                        <h4>@ViewData["Resultado"]</h4>
                        @if (ViewBag.Arquivos != null)
                        {
                            @foreach (string arquivo in ViewBag.Arquivos)
                            {
                                <li>
                                    @arquivo
                                </li>
                            }
                        }
                    }
                </div>
            </div>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                  asp-action="GetImagens">
                <img src="~/images/lupa.png" width="200" height="150" />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>
<div>
